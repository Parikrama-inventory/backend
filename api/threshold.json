# /api/thresholds
-----------------------------------------------------------------------------------------------------------------------------------
-----------------------------------------------------------------------------------------------------------------------------------

# Get All thresholds for the products (GET)
# Request
  # Endpoint: http://localhost:5001/local-parikrama/us-central1/app/api/thresholds
#Response
{
    "thresholds": [
      {
        "product": "milk",
        "createdDate": "2020-06-12T11:16:04.060Z",
        "category": "food",
        "unit": "litres",
        "thresholds": {
          "kormangala": 15,
          "sarjapur": 10
        }
      },
      {
        "product": "crocin",
        "createdDate": "2020-06-12T11:16:04.060Z",
        "category": "pharmacy",
        "unit": "number",
        "thresholds": {
          "kormangala": 25,
          "sarjapur": 30
        }
      }
    ],
    "totalProducts": 2
}

