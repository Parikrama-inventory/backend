# Get All Transactions done by an User in given branch (GET)
  # Endpoint: http://localhost:5001/local-parikrama/us-central1/api/api/transactions/{branchName}?user={userId}
#Response
{
  "transactions": [
      {
          "operationalQuantity": 2,
          "operation": "adjustment",
          "product": "chair",
          "closingQuantity": 5,
          "date": "2020-06-12T07:15:00.000Z",
          "user": "wwhite@gmail.com",
          "initialQuantity": 7
      },
      {
          "closingQuantity": 13,
          "date": "2020-06-12T07:15:00.000Z",
          "user": "wwhite@gmail.com",
          "initialQuantity": 20,
          "operationalQuantity": 7,
          "toBranch": "Sarjapur",
          "operation": "transferOut",
          "product": "milk"
      }
  ]
}

