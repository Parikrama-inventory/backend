# /api/branch
-----------------------------------------------------------------------------------------------------------------------------------
-----------------------------------------------------------------------------------------------------------------------------------

# Get All Transactions performed by a branch (GET)
# Request
  # Endpoint: http://localhost:5001/local-parikrama/us-central1/api/api/transactions/{branchName}
#Response
{
  "transactions": [
    {
        "operation": "add",
        "product": "milk",
        "user_id": "swhite",
        "date": "2020-06-02T08:41:00.000Z",
        "quantity": 10
    },
    {
        "user_id": "swhite",
        "date": "2020-06-02T08:46:00.000Z",
        "quantity": 8,
        "operation": "add",
        "product": "chair"
    }
  ]
}

